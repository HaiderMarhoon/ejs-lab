<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= category %> Menu</title>
</head>
<body>
  <%- include('partials/nav') %>

  <h1><%= category %> Menu</h1>

  <% if (menuItems.length === 0) { %>
    <p>No items found in this category.</p>
  <% } else { %>
    <% menuItems.forEach(item => { %>
      <div>
        <h3><%= item.name %> - $<%= item.price.toFixed(2) %></h3>
        <p>Rating: <%= item.rating %> ‚≠ê</p>
        <p><%= item.details %></p>
      </div>
      <hr>
    <% }) %>
  <% } %>

</body>
</html>
