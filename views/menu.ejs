<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>

<body>
  <%- include('./partials/nav') %>
    <h1>Full Menu</h1>
    <h2>Mains</h2>
    <% menu.forEach(item=> { if(item.category === 'mains') { %>
      <h3>
        <%= item.name %> - $<%= item.price.toFixed(2) %>
      </h3>
      <p>Rating: <%= item.rating %> ⭐</p>
      <p>
        <%= item.details %>
      </p>
      <hr>
      <% } }) %>

        <h2>Desserts</h2>
        <% menu.forEach(item=> { if(item.category === 'desserts') { %>
          <h3>
            <%= item.name %> - $<%= item.price.toFixed(2) %>
          </h3>
          <p>Rating: <%= item.rating %> ⭐</p>
          <p>
            <%= item.details %>
          </p>
          <hr>
          <% } }) %>

            <h2>Sides</h2>
            <% menu.forEach(item=> { if(item.category === 'sides') { %>
              <h3>
                <%= item.name %> - $<%= item.price.toFixed(2) %>
              </h3>
              <p>Rating: <%= item.rating %> ⭐</p>
              <p>
                <%= item.details %>
              </p>
              <hr>
              <% } }) %>
</body>

</html>